<h2>Edit Profile</h2>

<%= form_for current_user, class: "form-group" do |f| %>
  <% if current_user.errors.any? %>

    <div id="error_explanation">
      <h2><%= pluralize(current_user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% current_user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-md-6">
    <fieldset>
      <div class="control-group">
        <%= f.label :first_name %><br>
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
      <div class="control-group">
        <%= f.label :last_name %><br>
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
      <div class="control-group">
        <%= f.label :current_city %><br>
        <%= f.text_field :current_city, class: "form-control" %>
      </div>
      <div class="control-group">
        <%= f.label :about %><br>
        <%= f.text_area :blurb, class: "form-control" %>
      </div>
      <div class="control-actions">
        <%= f.submit %>
      </div>
    </fieldset>
  </div>

  <% end %>
