<%= form_for @board, url: user_path(current_user) do |f| %>
  <div class="col-md-6">
    <fieldset>
      <div class="control-group">
        <%= f.label :name %><br>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="control-actions">
        <%= f.submit "Save", class: "btn btn-default" %>
      </div>
    </fieldset>
  </div>
<% end %>
