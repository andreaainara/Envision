<div class="container">
  <div class="row">
      <%= link_to "Back", user_path(current_user) %>
  </div>

        <div class="panel panel-success col-md-4">
            <div class="panel-heading">
                <h3 class="panel-title">New</h3>
            </div>
            <div class="panel-body">
              <center><p><%= link_to new_card_path,class: "glyphicon glyphicon-plus-sign btn btn-success" do %><% end %></p></center>
            </div>
        </div>

        <% @cards.each do |card| %>
        <% if card.picture == "" %>
        <div class="row">
            <div class="panel panel-danger col-md-4">
                <div class="panel-body">
                    <center><p id="text_card"><%= card.text %><br></p></center>
                    <%= link_to "Delete Card", delete_card_path(card.board, card), method: :delete %>
                </div>
            </div>
        </div>

    <% else %>
        <div class="row">
            <div class="panel panel-info col-md-4">
                <div class="panel-body">
                    <center><img src="<%= card.picture %>"/>
                    <br>
                    <p id="photo_card"><%= card.text %><br></p></center>
                    <div class="card-action">
                        <%= link_to "Delete Card", delete_card_path(card.board, card), method: :delete %>
                    </div>
                </div>
            </div>
            <% end %>
            <% end %>
        </div>

    </div>
